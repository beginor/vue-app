{
  "name": "rollup-starter",
  "version": "1.0.0",
  "description": "rollup starter kit",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run rollup && npm run copy-libs",
    "build-app": "npm run clean-app && npm run rollup",
    "clean": "rm -rf dist && mkdir dist",
    "clean-app": "rm -rf dist/main.* dist/chunks",
    "copy-libs": "./copy-libs.sh",
    "browser-sync": "browser-sync start --config bs-config.js",
    "rollup": "rollup -c rollup.config.js",
    "rollup-watch": "npm run rollup -- --watch",
    "dev": "npm run clean-app && concurrently 'npm run browser-sync' 'npm run rollup-watch'",
    "start": "npm run clean && npm run copy-libs && npm run dev",
    "test": "echo test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beginor/rollup-starter.git"
  },
  "keywords": [
    "rollup",
    "starter"
  ],
  "author": "beginor <beginor@qq.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beginor/rollup-starter/issues"
  },
  "homepage": "https://github.com/beginor/rollup-starter#readme",
  "dependencies": {
    "@popperjs/core": "^2.11.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.1.6",
    "eslint": "^8.4.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "rollup": "^2.60.2",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-esbuild": "^4.7.2",
    "sass": "^1.44.0",
    "typescript": "^4.5.2",
    "esbuild": "^0.14.2"
  }
}
