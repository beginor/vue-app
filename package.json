{
  "name": "rollup-starter",
  "version": "1.0.0",
  "description": "rollup starter kit",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run rollup && npm run copy-libs",
    "clean": "rm -rf dist && mkdir dist",
    "copy-libs": "./copy-libs.sh",
    "browser-sync": "browser-sync start --config bs-config.js",
    "rollup": "rollup -c rollup.config.js",
    "rollup-watch": "npm run rollup -- --watch",
    "start": "npm run clean && npm run copy-libs && concurrently 'npm run browser-sync' 'npm run rollup-watch'",
    "test": "echo test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beginor/rollup-starter.git"
  },
  "keywords": [
    "rollup",
    "starter"
  ],
  "author": "beginor <beginor@qq.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beginor/rollup-starter/issues"
  },
  "homepage": "https://github.com/beginor/rollup-starter#readme",
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.2",
    "bootstrap-icons": "^1.5.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.0.17",
    "eslint": "^7.30.0",
    "@typescript-eslint/parser": "^4.28.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "rollup": "^2.53.1",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.5"
  }
}
